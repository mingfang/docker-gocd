<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="Resource">

    <resultMap id="select-resources" class="com.thoughtworks.cruise.config.Resource">
        <result property="id" column="resourceId"/>
        <result property="name" column="resourceName"/>
    </resultMap>

    <resultMap id="resource-map" class="com.thoughtworks.cruise.config.Resource">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="buildId" column="buildId"/>
    </resultMap>

    <parameterMap id="insert-resource" class="com.thoughtworks.cruise.config.Resource">
        <parameter property="name"/>
        <parameter property="buildId"/>
    </parameterMap>

    <insert id="insertResource" parameterMap="insert-resource">
        INSERT INTO resources(name, buildId) VALUES (?, ?)
        <selectKey resultClass="long" keyProperty="id" type="post">
            CALL IDENTITY();
        </selectKey>
    </insert>

    <insert id="insertResource-postgresql" parameterMap="insert-resource">
        INSERT INTO resources(name, buildId) VALUES (?, ?)
        <selectKey resultClass="long" keyProperty="id" type="post">
            SELECT lastval();
        </selectKey>
    </insert>

    <select id="getResourcesByBuildInstanceId" resultMap="resource-map" parameterClass="long">
        SELECT id, name, buildId
        FROM resources
        WHERE buildId = #buildId#
        ORDER BY id
    </select>

</sqlMap>