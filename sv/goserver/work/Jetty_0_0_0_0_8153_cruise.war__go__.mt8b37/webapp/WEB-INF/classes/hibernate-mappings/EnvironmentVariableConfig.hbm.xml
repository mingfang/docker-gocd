<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.thoughtworks.cruise.config" default-access="field" default-lazy="false">
    <class name="com.thoughtworks.cruise.config.EnvironmentVariableConfig" table="environmentVariables">
        <cache usage="read-write"/>
        <id name="id" column="id">
            <generator class="identity"/>
        </id>
        
        <property name="name" column="variableName" />
        <property name="isSecure"/>
        <property name="entityId"/>
        <property name="entityType"/>
        <property name="value" access="property" column="variableValue"/>
    </class>
</hibernate-mapping>
