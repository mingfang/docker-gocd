<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.thoughtworks.cruise.domain" default-access="field" default-lazy="false">
    <class name="com.thoughtworks.cruise.domain.MaterialInstance" table="materials" discriminator-value="">
        <id name="id" column="id">
            <generator class="identity"/>
        </id>
        <discriminator column="type" type="string"/>

        <property name="flyweightName"/>
        <property name="fingerprint"/>

        <subclass name="com.thoughtworks.cruise.domain.materials.mercurial.HgMaterialInstance" discriminator-value="HgMaterial">
            <property name="url"/>
        </subclass>

        <subclass name="com.thoughtworks.cruise.domain.materials.svn.SvnMaterialInstance" discriminator-value="SvnMaterial">
            <property name="url"/>
            <property name="checkExternals"/>
            <property name="username"/>
        </subclass>

        <subclass name="com.thoughtworks.cruise.domain.materials.git.GitMaterialInstance" discriminator-value="GitMaterial">
            <property name="url"/>
            <property name="branch"/>
            <property name="submoduleFolder"/>
        </subclass>

        <subclass name="com.thoughtworks.cruise.domain.materials.perforce.P4MaterialInstance" discriminator-value="P4Material">
            <property name="username"/>
            <property name="url"/>
            <property name="view"/>
            <property name="useTickets"/>
        </subclass>

        <subclass name="com.thoughtworks.cruise.domain.materials.dependency.DependencyMaterialInstance" discriminator-value="DependencyMaterial">
            <property name="pipelineName"/>
            <property name="stageName"/>
        </subclass>

        <subclass name="com.thoughtworks.cruise.domain.materials.tfs.TfsMaterialInstance" discriminator-value="TfsMaterial">
            <property name="url"/>
            <property name="username"/>
            <property name="workspace"/>
            <property name="projectPath"/>
            <property name="domain"/>
        </subclass>

        <subclass name="com.thoughtworks.cruise.domain.materials.TestingMaterialInstance" discriminator-value="TestingMaterial">
            <property name="url"/>
        </subclass>
        <subclass name="com.thoughtworks.cruise.domain.materials.packagematerial.PackageMaterialInstance" discriminator-value="PackageMaterialInstance">
            <property name="configuration"/>
        </subclass>
    </class>
</hibernate-mapping>
