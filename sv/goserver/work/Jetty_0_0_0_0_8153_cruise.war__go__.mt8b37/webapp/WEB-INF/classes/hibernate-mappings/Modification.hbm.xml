<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.thoughtworks.cruise.domain.materials" default-access="field" default-lazy="false">
    <class name="Modification" table="modifications" >
        <id name="id" column="id">
            <generator class="identity"/>
        </id>
        <property name="revision"/>
        <property name="comment"/>
        <property name="emailAddress"/>
        <property name="modifiedTime"/>
        <property name="userName"/>
        <property name="pipelineLabel"/>
        <property name="pipelineId"/>
        <property name="additionalData" access="property"/>

        <many-to-one name="materialInstance" class="com.thoughtworks.cruise.domain.MaterialInstance" column="materialId"/>
        
        <set name="files" order-by="id" cascade="all" fetch="join">
            <key column="modificationId" not-null="true"/>
            <one-to-many class="com.thoughtworks.cruise.domain.materials.ModifiedFile"/>
        </set>

    </class>
</hibernate-mapping>