<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.thoughtworks.cruise.server.domain.oauth" default-access="field" default-lazy="false">
    <class name="OauthToken" table="oauthtokens" >
        <id name="id" column="id">
            <generator class="identity"/>
        </id>
        <property name="userId"/>

        <many-to-one name="oauthClient" class="com.thoughtworks.cruise.server.domain.oauth.OauthClient" column="oauthClientId"/>

        <property name="accessToken"/>
        <property name="refreshToken"/>
        <property name="expiresAt"/>
    </class>
</hibernate-mapping>