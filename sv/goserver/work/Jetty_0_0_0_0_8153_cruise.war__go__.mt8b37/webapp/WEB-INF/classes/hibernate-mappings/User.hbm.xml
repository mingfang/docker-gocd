<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.thoughtworks.cruise.domain" default-access="field" default-lazy="false">
    <class name="com.thoughtworks.cruise.domain.User" table="users">
        <cache usage="read-write"/>
        <id name="id" column="id">
            <generator class="identity"/>
        </id>
        <property name="name"/>
        <property name="displayName"/>
        <property name="email"/>
        <property name="matcher"/>
        <property name="emailMe"/>
        <property name="enabled"/>
        <property name="disableLicenseExpiryWarning"/>

        <bag name="notificationFilters" inverse="false" cascade="all-delete-orphan" lazy="false">
            <cache usage="read-write"/>
            <key column="userid"/>
            <one-to-many class="com.thoughtworks.cruise.domain.NotificationFilter"/>
        </bag>
    </class>
</hibernate-mapping>
